#!/bin/bash
# Tomorrow Night Bright - JankyBorders theme
# Generated from theme.yml
# Author: Ghostty

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - accent color (base0D)
  active_color=0xff7aa6da

  # Inactive windows - subtle border (base02)
  inactive_color=0xff424242

  # Glow effect using accent color
  active_color='glow(0xff7aa6da)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
