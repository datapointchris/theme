#!/bin/bash
# Popping and Locking - JankyBorders theme
# Generated from theme.yml
# Author: Ghostty

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - accent color (base0D)
  active_color=0xff458588

  # Inactive windows - subtle border (base02)
  inactive_color=0xffebdbb2

  # Glow effect using accent color
  active_color='glow(0xff458588)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
