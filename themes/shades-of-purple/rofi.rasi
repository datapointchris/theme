    active: #3ad900;
    selected: #6943ff;

    /* Named accent colors */
    red: #d90429;
    green: #3ad900;
    yellow: #ffe700;
    blue: #6943ff;
    magenta: #ff2c70;
    cyan: #00c5c7;
    orange: #f92a1c;

    /* Bright variants */
    bright-red: #f92a1c;
    bright-green: #43d426;
    bright-yellow: #f1d000;
    bright-blue: #6871ff;
    bright-magenta: #ff77ff;
    bright-cyan: #79e8fb;
}
