#!/bin/bash
# Solarized Osaka - JankyBorders theme
# Generated from theme.yml
# Author: Takuya Matsuyama (craftzdog)

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - use UI accent color
  active_color=0xff268bd2

  # Inactive windows - use UI border color
  inactive_color=0xff073642

  # Glow effect using accent color
  active_color='glow(0xff268bd2)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
