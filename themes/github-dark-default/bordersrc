#!/bin/bash
# GitHub Dark Default - JankyBorders theme
# Generated from theme.yml
# Author: Projekt0n

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - use UI accent color
  active_color=0xff2f81f7

  # Inactive windows - use UI border color
  inactive_color=0xff30363d

  # Glow effect using accent color
  active_color='glow(0xff2f81f7)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
