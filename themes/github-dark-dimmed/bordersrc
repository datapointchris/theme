#!/bin/bash
# GitHub Dark Dimmed - JankyBorders theme
# Generated from theme.yml
# Author: Projekt0n

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - accent color (base0D)
  active_color=0xff6cb6ff

  # Inactive windows - subtle border (base02)
  inactive_color=0xff373e47

  # Glow effect using accent color
  active_color='glow(0xff6cb6ff)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
