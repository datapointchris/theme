#!/bin/bash
# Slate - JankyBorders theme
# Generated from theme.yml
# Author: Ralph Amissah (https://github.com/vim/colorschemes)

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - accent color (base0D)
  active_color=0xff5f87d7

  # Inactive windows - subtle border (base02)
  inactive_color=0xff4a4a4a

  # Glow effect using accent color
  active_color='glow(0xff5f87d7)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
