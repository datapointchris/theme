#!/bin/bash
# Charcoal Ember - JankyBorders theme
# Generated from theme.yml
# Author: datapointchris

options=(
  style=round
  width=8.0
  hidpi=on

  # Active window - accent color (base0D)
  active_color=0xff4eb6fe

  # Inactive windows - subtle border (base02)
  inactive_color=0xff373b41

  # Glow effect using accent color
  active_color='glow(0xff4eb6fe)'

  blacklist="System Settings|System Information|QuickTime Player"
)

borders "${options[@]}"
